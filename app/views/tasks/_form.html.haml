= form_for @task do |f|
  -if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :course
    = f.text_field :course
  .field
    = f.label :due_date
    = f.datetime_select :due_date, options = {:default => Time.now.localtime, :order => [:month, :day, :year], :ampm => true}, html_options = {:style=>'width: auto'}
  .field
    = f.label :info
    = f.text_area :info, html_options = {:style=>'width: 500px; height: 125px'}
  .actions
    = f.submit 'Save'
